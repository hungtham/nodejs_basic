<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS Basic</title>
    <!-- css: because viewEngine run express.static to folder public => link to style.css was changed to below link -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>

    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload-file">Upload file</a>

    </div>

    <div>
        <div class="w3-container">
            <h2>List Users Table:</h2>
            <table class="w3-table-all">
                <thead>
                    <tr class="w3-light-grey w3-hover-red">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <body>

                    <% for(var i=0; i < dataUsers.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUsers[i].id %>
                            </td>
                            <td>
                                <%= dataUsers[i].firstName %>
                            </td>
                            <td>
                                <%= dataUsers[i].lastName %>
                            </td>
                            <td>

                                <a href="/detail/user/<%= dataUsers[i].id %>" target="_blank">Details</a>

                                <form action="/edit-user/<%= dataUsers[i].id %>" method="get">
                                    <button type="submit" target="_blank">Edit</button>
                                </form>

                                <form action="/delete-user" method="post">
                                    <input type="text" hidden value="<%= dataUsers[i].id %>" name="id" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </body>
